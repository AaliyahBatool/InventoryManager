{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist-ts",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["prisma/**/*.ts"],
  "exclude": ["node_modules", "**/*.js"]
}
